<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    </LinearLayout>

    <!-- Próximo mantenimiento -->

    <!-- Botón para más detalles -->

    <TextView
        android:id="@+id/tvMantenimientoTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Mantenimiento de la Moto"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvProximoMantenimiento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.546"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvProximoMantenimiento"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginBottom="40dp"
        android:text="Próximo Mantenimiento: 15 días"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDetallesMantenimiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDetallesMantenimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="468dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Ver Detalles"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>